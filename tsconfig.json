{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "removeComments": true,
    "declaration": true,
    "strict": true,
    "noImplicitReturns": true,
    "inlineSources": true,
    "target": "ES2022",
    "lib": ["DOM", "ES2022"],
    "types": [
      "foundry-vtt-types",
      "node",
    ],
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@league-of-foundry-developers"
    ]
  },
  "compileOnSave": true,
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules",
    "jest.config.ts"
  ]
}
{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "target": "ES6",
    "lib": ["ESNext","DOM"],
    "types": ["@league-of-foundry-developers/foundry-vtt-types", "@types/jasmine"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }},
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "files": ["src/esmodules/module.ts", "tests/module.test.ts"]
}
